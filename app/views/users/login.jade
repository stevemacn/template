extends layout 

block desc
    include ./desc.jade 


block form 
    .well
        form(action='/users/session', method='post').form-horizontal
          .fieldset
            legend Log in!
            input(type="hidden", name="_csrf", value=csrftoken)
            .form-group
                label.col-lg-2.control-label UID 
                div.col-lg-10
                    input#user.form-control(
                        type='text',
                        name='uid',
                        placeholder='User ID')
            .form-group 
                label.col-lg-2.control-label Password
                div.col-lg-10
                    input#pwd.form-control(
                        type='password',
                        name='password',
                        placeholder='Password')
            .form-group
                div.col-lg-10
                    input#submit(type='submit', value='Log In').btn.btn-primary
            .form-group
                div.col-lg-10
                    p Don't have a an account? 
                        a(href="/signup") Signup!
block validate
    - if (message != ''){
        p(style="min-height:55px;").alert.alert-danger=message
    - }
    
